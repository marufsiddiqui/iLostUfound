!!!
%html
  %head
    %title iLostUfound
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags

  %body
    .container
      .masthead
        %h3.muted iLostUFound
        .navbar
          .navbar-inner
            .container
              %ul.nav
                %li{:class => (controller.controller_name.eql?('welcome'))? "active" : "welcome" }
                  %a{:href => "/"} Home
                %li{:class => (controller.controller_name.eql?('lost_items'))? "active" : "lost_items" }
                  %a{:href => "/lost_items"} Lost items
                %li{:class => (controller.controller_name.eql?('found_items'))? "active" : "found_items" }
                  %a{:href => "/found_items"} Found items
                %li{:class => (controller.controller_name.eql?('search'))? "active" : "search" }
                  %a{:href => "/search/lost"} Search Lost Items
                %li
                  %a{:href => "#"} About
                %li
                  %a{:href => "#"} Contact
        / /.navbar
      / Jumbotron
      .jumbotron
        = yield
      %hr/
      .footer
        %p Â© iLostUfound 2013
    / /container


