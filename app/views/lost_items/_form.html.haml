= form_for @lost_item do |f|
  - if @lost_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lost_item.errors.count, "error")} prohibited this lost_item from being saved:"
      %ul
        - @lost_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_area :address, :rows => 5
  .field
    = f.label :cell
    = f.text_field :cell
  .field
    = f.label :lost_item
    = f.text_field :lost_item
  .field
    = f.label :lost_location
    = f.text_area :lost_location, :rows => 5
  .field
    = f.label :lost_date
    = f.text_field :lost_date
  .field
    = f.label :lost_item_pic
    = f.file_field :lost_item_pic
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :additional_contact
    = f.text_area :additional_contact, :rows => 5
  .actions
    = f.submit 'Save'


:javascript
  $(function(){
    $("#lost_item_lost_date").datepicker({dateFormat: 'dd-mm-yy'});

    $("#new_lost_item").isHappy({
      fields : {
        "#lost_item_name" :{
          required : true,
          message  : "You must enter your name"  
        },
        "#lost_item_address" :{
          required : true,
          message  : "You must give your address"
        },
        "#lost_item_cell" :{
          required : true,
          message  : "You must give your cell no"
        },
        "#lost_item_lost_item" :{
          required : true,
          message  : "You must tell what you have lost"
        },
        "#lost_item_lost_location" :{
          required :true,
          message  : "You must tell where you have lost your item"
        },
        "#lost_item_lost_date" :{
          required : true,
          message  : "You must tell when you lost the item"
        }
      }
    });
  });
