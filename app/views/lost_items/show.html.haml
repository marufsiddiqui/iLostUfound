- model_class = LostItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @lost_item.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @lost_item.address
%p
  %strong= model_class.human_attribute_name(:cell) + ':'
  %br
  = @lost_item.cell
%p
  %strong= model_class.human_attribute_name(:lost_item) + ':'
  %br
  = @lost_item.lost_item
%p
  %strong= model_class.human_attribute_name(:lost_location) + ':'
  %br
  = @lost_item.lost_location
%p
  %strong= model_class.human_attribute_name(:lost_date) + ':'
  %br
  = @lost_item.lost_date.strftime("%d %B, %Y")
%p{:style => "width:200px;height:200px;overflow:hidden;"}
  %strong= model_class.human_attribute_name(:lost_item_pic) + ':'
  %br
  = image_tag @lost_item.lost_item_pic.url
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @lost_item.email
%p
  %strong= model_class.human_attribute_name(:additional_contct) + ':'
  %br
  = @lost_item.additional_contct

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), lost_items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_lost_item_path(@lost_item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), lost_item_path(@lost_item), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
