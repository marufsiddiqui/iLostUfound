- model_class = LostItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:address)
      %th= model_class.human_attribute_name(:cell)
      %th= model_class.human_attribute_name(:lost_item)
      %th= model_class.human_attribute_name(:lost_location)
      %th= model_class.human_attribute_name(:lost_date)
      %th= model_class.human_attribute_name(:lost_item_pic)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:additional_contct)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @lost_items.each do |lost_item|
      %tr
        %td= link_to lost_item.id, lost_item_path(lost_item)
        %td= lost_item.name
        %td= lost_item.address
        %td= lost_item.cell
        %td= lost_item.lost_item
        %td= lost_item.lost_location
        %td= lost_item.lost_date
        %td= lost_item.lost_item_pic
        %td= lost_item.email
        %td= lost_item.additional_contct
        %td=l lost_item.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_lost_item_path(lost_item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), lost_item_path(lost_item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_lost_item_path, :class => 'btn btn-primary'
